<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:id="@+id/back"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backbackround"
            android:layout_width="300dp"
            android:layout_height="270dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/fondo"
            android:layout_marginBottom="180dp"
            android:layout_above="@id/blackbar"/>
        <ImageView
            android:id="@+id/backround"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/tt_video" />
        <ImageView
            android:id="@+id/txt_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/following" />
        <ImageView
            android:id="@+id/blackbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:srcCompat="@drawable/black_bar"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/musicd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/musicdisc"
            android:layout_above="@id/blackbar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
        <ImageView
            android:id="@+id/profile_b"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/profile"
            android:layout_above="@id/grid_tt"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="3dp"/>
        <GridLayout
            android:id="@+id/grid_tt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="horizontal"
            android:layout_above="@id/musicd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/like_b"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/like"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/comm_b"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/comments"

                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/share_b"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/share"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp"/>
        </GridLayout>

        <ImageView
            android:id="@+id/txt_1"
            android:layout_width="300dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/txt"
            android:layout_above="@id/blackbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"/>
        <ImageView
            android:id="@+id/txt_2"
            android:layout_width="270dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/black_txt"
            android:layout_above="@id/txt_1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="1dp"/>
        <ImageView
            android:id="@+id/txt_3"
            android:layout_width="270dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/white_txt_one"
            android:layout_above="@id/txt_2"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/txt_4"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_marginStart="160dp"
            android:layout_above="@id/txt_3"
            app:srcCompat="@drawable/white_txt_two"
            android:layout_toStartOf="@id/profile_b"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/home_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                app:srcCompat="@drawable/home_b" />

            <ImageView
                android:id="@+id/tendencies_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                app:srcCompat="@drawable/tendencies_b"/>
            <ImageView
                android:id="@+id/newtt_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/newtt_b"/>
            <ImageView
                android:id="@+id/inputt_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                app:srcCompat="@drawable/inputt_b" />
            <ImageView
                android:id="@+id/me_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/me"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>